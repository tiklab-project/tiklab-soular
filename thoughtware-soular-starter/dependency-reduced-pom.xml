<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>thoughtware-eas</artifactId>
    <groupId>io.thoughtware</groupId>
    <version>1.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>thoughtware-eas-starter</artifactId>
  <name>${project.artifactId}</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>io.thoughtware.soular.starter.SoularApplication</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>*.yaml</exclude>
            <exclude>*.properties</exclude>
            <exclude>*.xml</exclude>
            <exclude>**/config/dev/**</exclude>
            <exclude>**/config/test/**</exclude>
            <exclude>**/config/local/**</exclude>
            <exclude>**/config/demo/**</exclude>
            <exclude>**/config/prd/**</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.5</version>
        <executions>
          <execution>
            <id>eas-clean</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <skip>false</skip>
              <filesets>
                <fileset>
                  <directory>${basedir}/plugin</directory>
                  <followSymlinks>false</followSymlinks>
                  <useDefaultExcludes>true</useDefaultExcludes>
                  <includes>
                    <include>**/*.jar</include>
                  </includes>
                </fileset>
                <fileset>
                  <directory>${basedir}/embbed</directory>
                  <followSymlinks>false</followSymlinks>
                  <useDefaultExcludes>true</useDefaultExcludes>
                  <includes>
                    <include>**/*</include>
                  </includes>
                </fileset>
              </filesets>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <failOnError>false</failOnError>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>system-linux</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.8</version>
            <executions>
              <execution>
                <id>unpack</id>
                <phase>compile</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>io.thoughtware</groupId>
                      <artifactId>thoughtware-postgresql-linux</artifactId>
                      <version>${thoughtware-postgresql.version}</version>
                      <type>zip</type>
                      <outputDirectory>embbed</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>io.thoughtware</groupId>
                      <artifactId>thoughtware-jdk-linux</artifactId>
                      <version>${thoughtware-jdk.version}</version>
                      <type>zip</type>
                      <outputDirectory>embbed</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>io.thoughtware</groupId>
          <artifactId>thoughtware-jdk-linux</artifactId>
          <version>${thoughtware-jdk.version}</version>
          <type>zip</type>
          <scope>provided</scope>
        </dependency>
        <dependency>
          <groupId>io.thoughtware</groupId>
          <artifactId>thoughtware-postgresql-linux</artifactId>
          <version>${thoughtware-postgresql.version}</version>
          <type>zip</type>
          <scope>provided</scope>
        </dependency>
      </dependencies>
      <properties>
        <assembly>linux</assembly>
        <systemType>linux</systemType>
      </properties>
    </profile>
    <profile>
      <id>system-windows</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.8</version>
            <executions>
              <execution>
                <id>unpack</id>
                <phase>compile</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>io.thoughtware</groupId>
                      <artifactId>thoughtware-postgresql-windows</artifactId>
                      <version>${thoughtware-postgresql.version}</version>
                      <type>zip</type>
                      <outputDirectory>embbed</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>io.thoughtware</groupId>
                      <artifactId>thoughtware-jdk-windows</artifactId>
                      <version>${thoughtware-jdk.version}</version>
                      <type>zip</type>
                      <outputDirectory>embbed</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>io.thoughtware</groupId>
          <artifactId>thoughtware-jdk-windows</artifactId>
          <version>${thoughtware-jdk.version}</version>
          <type>zip</type>
          <scope>provided</scope>
        </dependency>
        <dependency>
          <groupId>io.thoughtware</groupId>
          <artifactId>thoughtware-postgresql-windows</artifactId>
          <version>${thoughtware-postgresql.version}</version>
          <type>zip</type>
          <scope>provided</scope>
        </dependency>
      </dependencies>
      <properties>
        <assembly>windows</assembly>
        <systemType>windows</systemType>
      </properties>
    </profile>
    <profile>
      <id>system-mac</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.8</version>
            <executions>
              <execution>
                <id>unpack</id>
                <phase>compile</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>io.thoughtware</groupId>
                      <artifactId>thoughtware-postgresql-mac</artifactId>
                      <version>${thoughtware-postgresql.version}</version>
                      <type>zip</type>
                      <outputDirectory>embbed</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>io.thoughtware</groupId>
                      <artifactId>thoughtware-jdk-mac</artifactId>
                      <version>${thoughtware-jdk.version}</version>
                      <type>zip</type>
                      <outputDirectory>embbed</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>io.thoughtware</groupId>
          <artifactId>thoughtware-jdk-mac</artifactId>
          <version>1.0.1-SNAPSHOT</version>
          <type>zip</type>
          <scope>provided</scope>
        </dependency>
        <dependency>
          <groupId>io.thoughtware</groupId>
          <artifactId>thoughtware-postgresql-mac</artifactId>
          <version>1.0.2-SNAPSHOT</version>
          <type>zip</type>
          <scope>provided</scope>
        </dependency>
      </dependencies>
      <properties>
        <assembly>mac</assembly>
        <systemType>mac</systemType>
      </properties>
    </profile>
    <profile>
      <id>env-dev</id>
      <properties>
        <yaml-type>/config/dev</yaml-type>
      </properties>
    </profile>
    <profile>
      <id>env-test</id>
      <properties>
        <yaml-type>/config/test</yaml-type>
      </properties>
    </profile>
    <profile>
      <id>env-release</id>
      <properties>
        <yaml-type>/</yaml-type>
      </properties>
    </profile>
    <profile>
      <id>env-demo</id>
      <properties>
        <yaml-type>/config/demo</yaml-type>
      </properties>
    </profile>
    <profile>
      <id>env-prd</id>
      <properties>
        <yaml-type>/config/prd</yaml-type>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>io.thoughtware</groupId>
      <artifactId>thoughtware-jdk-mac</artifactId>
      <version>1.0.1-SNAPSHOT</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>io.thoughtware</groupId>
      <artifactId>thoughtware-postgresql-mac</artifactId>
      <version>1.0.2-SNAPSHOT</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>
